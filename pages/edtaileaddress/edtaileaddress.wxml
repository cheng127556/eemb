<view class='edtailebox'>
  <form bindsubmit="fromsubmit" >
    <view class="form-cell">
      <text>收件人:</text>
      <input placeholder="" value="成慧芳" name="nickname"/>
    </view>
    <view class="form-cell">
      <text>联系电话:</text>
      <input placeholder="" value="1275638500" name="telephon" />
    </view>
    <picker mode="region" bindchange="bindRegionChange"  custom-item="{{customItem}}" class='form-cell'>
      <view class="picker">
        所在地区：{{region[0]}}，{{region[1]}}，{{region[2]}}
      </view>
    </picker>
    <view class="form-cell">
      <text>详细地址:</text>
      <input placeholder="" value="武汉市" name="detaileaddress"/>
    </view>
    <button type="warn" formType="submit" class='subbtn'>保存地址</button>
  </form>
</view>


